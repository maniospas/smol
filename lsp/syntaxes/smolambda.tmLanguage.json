{
  "scopeName": "source.smolambda",
  "name": "smolambda",
  "patterns": [
    {
      "name": "comment.line.double-slash",
      "match": "//.*"
    },
    {
      "name": "meta.preprocessor",
      "match": "@\\w+"
    },
    {
      "name": "keyword.control",
      "match": "\\b(smo|service|if|else|elif|include|on|while|union|return|end)\\b"
    },
    {
      "name": "keyword.operator",
      "match": "\\||="
    },
    {
      "name": "storage.type",
      "match": "\\b(i64|u64|f64|ptr|nstr|str|buffer|main|copy|push|put|expect)\\b"
    },
    {
      "name": "constant.numeric",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape"
        }
      ]
    },
    {
      "name": "punctuation",
      "match": "[{}();,\\[\\]]"
    }
  ]
}
